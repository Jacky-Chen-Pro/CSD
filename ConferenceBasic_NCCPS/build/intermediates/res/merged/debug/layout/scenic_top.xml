<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#E8E8E8"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/media_center"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/text_size_small"/>

    <ImageView
        android:id="@+id/iv_news_notification"
        android:adjustViewBounds="true"
        android:src="@drawable/default_load_bg"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="76dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/industrial_events"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/text_size_small"/>

    <ImageView
        android:id="@+id/iv_exhibitors_activity"
        android:src="@drawable/default_load_bg"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="76dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/live_show"
        android:textColor="@color/normal_gray"
        android:textSize="@dimen/text_size_small"/>
</LinearLayout>