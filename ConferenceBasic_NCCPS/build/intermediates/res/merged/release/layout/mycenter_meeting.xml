<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
		
        		
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/mycenter_meeting_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
         		<LinearLayout
                    android:id="@+id/metting_schedule_img_pre"
                    android:layout_width="fill_parent"
                    android:layout_height="3dp" >

                    <ImageView
                        android:id="@+id/metting_schedule_img"
                        android:layout_width="100dp"
                        android:layout_height="3dp"
                        android:src="@drawable/hyrc_date_selected" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_color"/>"
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/mycenter_meeting_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:cacheColorHint="@null"
        android:listSelector="@color/selectorgray"
        android:divider="@color/dividerColor"
        android:dividerHeight="1.0px"
        android:drawSelectorOnTop="false"
        android:fadingEdgeLength="0.0dp"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:smoothScrollbar="true" />

</LinearLayout>
</RelativeLayout>